<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="User Data">
        <EditTextPreference
            app:key="username"
            app:title="Username"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="email"
            app:title="Email"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Theme">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="dark_mode"
            app:title="Dark Mode" />
    </PreferenceCategory>

</PreferenceScreen>